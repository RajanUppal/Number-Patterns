/*
C++ program to print the following number pattern.
Input : 5
Output :
1
23
456
78910
1112131415
*/

#include <iostream>
using namespace std;

int main()
{
	int n,i,j,p;
	cout<<"Enter number of rows : ";
	cin>>n;
	i=1;
	p=1;
	while (i<=n)
	{
		j=1;
		while (j<=i)
		{
			cout<<p;
			p++;
			j++;
		}
		cout<<endl;
		i++;
	}
}
