/*
C++ program to print the following number pattern.
Input : 5
Output :
1
12
123
1234
12345
*/

#include <iostream>
using namespace std;

int main()
{
	int n,i,j;
	cout<<"Enter number of rows : ";
	cin>>n;
	i=1;
	while (i<=n)
	{
		j=1;
		while (j<=i)
		{
			cout<<j;
			j++;
		}
		cout<<endl;
		i++;
	}
}
